{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "KrakenD Enterprise API Gatewy",
  "port": 8080,
  "host": ["http://fake_api:8080"],
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "plugin": {
    "pattern": ".so",
    "folder": "/opt/krakend/plugins/"
  },
  "endpoints": [
    {
      "@comment": "Feature: Aggregation + Basic transformation (filtering & mapping) + grouping",
      "endpoint": "/user",
      "extra_config": {
        "auth/validator": {
            "alg": "HS256",
            "jwk_url": "https://run.mocky.io/v3/f751f16a-571d-4341-9ae6-7525ae8d2264",
            "cache": true,
            "cache_duration": 900,
            "roles_key": "user.role",
            "roles": ["admin"],
            "key_identify_strategy": "kid",
            "operation_debug": true,
            "roles_key_is_nested":true
        }
    },
      "backend": [
        {
          "host": ["http://users:3000/"],
          "url_pattern": "/user",
          "mapping": {
            "collection": "repos"
          },
          "is_collection": true
        }
      ]
    },
    {
      "endpoint": "/user/login",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/user/login",
          "host": ["http://users:3000/"]
        }
      ],
      "extra_config": {
        "auth/signer": {
          "alg": "HS256",
          "kid": "sim1",
          "keys_to_sign": ["access_token", "refresh_token"],
          "jwk_url": "https://run.mocky.io/v3/f751f16a-571d-4341-9ae6-7525ae8d2264",
          "disable_jwk_security": true
        }
      }
    },
    {
      "endpoint": "/test/{id}",
      "input_headers":["*"],
      "input_query_strings": ["*"],
      "backend": [
        {
          "host": [
            "http://users:3000"
          ],
          "url_pattern": "/user/getUserDeatils",
          "extra_config": {
            "plugin/http-client": {
              "name": "krakend-client-example",
              "krakend-client-example": {
                "path": "/__debug/hijack-me"
              }
            }
          }
        }
      ]
      }
  ],
  "sequential_start": true,
  "extra_config": {
    "security/cors": {
      "allow_origins": ["*"],
      "allow_methods": ["POST", "GET"],
      "allow_headers": ["Origin", "Authorization", "Content-Type"],
      "expose_headers": ["Content-Length"],
      "max_age": "12h"
    },
    "auth/revoker": {
      "N": 10000000,
      "P": 0.0000001,
      "hash_name": "optimal",
      "TTL": 1500,
      "port": 1234,
      "token_keys": ["jti"]
    }
  }
}
